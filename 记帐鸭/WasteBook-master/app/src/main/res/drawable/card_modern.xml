<?xml version="1.0" encoding="utf-8"?>
<!-- 现代化卡片背景 - 带阴影和圆角 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层 -->
    <item
        android:left="0dp"
        android:right="2dp"
        android:top="0dp"
        android:bottom="4dp">
        <shape>
            <solid android:color="#1a000000" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- 主卡片层 -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape>
            <solid android:color="@color/background_card" />
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="@color/border_light" />
        </shape>
    </item>
</layer-list>
